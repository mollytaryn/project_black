<% if @record.errors.any? %>
  <% @record.errors.messages.each do |message| %>
    (function () {
      var $form = $('.js-Form'),
          $input = $('input[id=<%= @name %>_<%= message.first.to_s %>]');

      if ($form.length) {
        formErrors($input, '<%= message.last.first %>');
      }
    }(this));
  <% end %>
<% elsif @path.present? %>
  (function (window) {
    window.location = "<%= @path %>";
  }(window));
<% end %>

