<div class="DashboardContainer u-fontInverted">
  <div class="u-row">
    <h1><%= number_to_currency(current_user.loans.total_paid, precision: 0) %></h1>
    <span class="u-helperText--inline">total repaid</span>
  </div>
  <div class="TileContainer">
    <div class="Tile Tile--white">
      <h4 class="Tile-heading">Total Interest</h4>
      <div class="u-number"><%= number_to_currency(current_user.loans.total_interest, precision: 0) %></div>
    </div>
    <div class="Tile Tile--white">
      <h4 class="Tile-heading">Total Principle</h4>
      <div class="u-number"><%= number_to_currency(current_user.loans.total_principal, precision: 0) %></div>
    </div>
    <div class="Tile Tile--white">
      <h4 class="Tile-heading">Pay Off Date</h4>
      <div class="u-number"><%= current_user.loans.pay_off_month %></div>
    </div>
  </div>
  <div class="u-row u-margin">
    <div><%= line_chart dashboard_data %></div>
  </div>
  <div class="TileContainer">
    <% current_user.loans.by_highest_balance.each_with_index do |loan, i| %>
      <div class="Tile js-Tile <%= 'is-selected' if i == 0 %>">
        <h4 class="Tile-heading"><%= loan.name %></h4>
        <div class="u-number"><%= number_to_currency(loan.principle_balance, precision: 0) %></div>
      </div>
    <% end %>
  </div>
</div>

