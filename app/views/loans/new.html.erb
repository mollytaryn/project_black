<div class="u-justifyCenter u-marginHeader">
  <h1 class="u-fontInverted">New Loan</h1>
</div>
<div class="AreaContainer">
  <% current_user.loans.each do |loan| %>
    <%= render partial: "show", locals: { loan: loan } %>
  <% end %>
  <%= render partial: "new_form_toodle" %>
  <%= render partial: "new_form" %>
</div>
<div class="u-justifySpaceBetween">
  <%= inline_svg("chevron_left.svg", class: "Icon-shape--action u-margin js-shiftLeft", size: '50px * 50px') %>
  <%= inline_svg("chevron_right.svg", class: "Icon-shape--action u-margin js-shiftRight", size: '50px * 50px') %>
</div>
<div class="TileContainer">
  <% current_user.loans.each do |loan| %>
    <div class="Tile">
      <h4 class="Tile-heading"><%= loan.name %></h4>
      <div class="Tile-number"><%= number_to_currency(loan.principle_balance, precision: 0) %></div>
    </div>
  <% end %>
</div>
